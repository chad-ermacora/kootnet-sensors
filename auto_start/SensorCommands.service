[Unit]
Description=KootNet Sensors - Network Commands
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
WorkingDirectory=/opt/kootnet-sensors
RestartSec=5s
User=root
Group=pi
ExecStart=/usr/bin/python3 /opt/kootnet-sensors/sensor_commands.py

[Install]
WantedBy=multi-user.target
